<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <title>Online Shopper</title>
    <style>
      html {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .col-md-4 {
        margin-bottom: 50px;
      }
      .my-jumbotron {
        position: relative;
        background: linear-gradient(
            47deg,
            rgba(0, 0, 0, 0.8),
            rgba(0, 176, 0, 0.2)
          ),
          url('/images/square.jpg') center center;
        background-color: #172d1c;
        width: 100%;
        background-size: cover;
        color: #fff;
        height: 18em;
      }
      .card-img-top {
        height: 300px;
      }
      .my-h1 {
        padding-top: 30px;
      }
      .opening-card {
        border-radius: 0;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div id="container" class="fluid">
      <main role="main">
        <%- include('../partials/jumbotron') %>
        <div class="container">
          <% let count = 0 %>
          <% for( let i = 0; i < 3; i++ ) { %>
            <div class="row">
              <% for( let j = 0; j < 3; j++ ) { %>
                <div class="col-md-4">
                  <div 
                  <% if (j===1) { %>
                    class="card opening-card"
                  <% } else { %>
                  class="card"
                  <% } %> >
                    <img
                      src="/images/products/random-products/<%=product[count].image%>"
                      class="card-img-top"
                      alt="..."
                    />
                    <div class="card-body">
                      <h5 class="card-title"><%=product[count].title%></h5>
                      <p class="card-text">
                        <%=productText[j]%>
                      </p>
                    </div>
                  </div>
                </div>
                <% count++ %>
              <% } %>
            </div>
          <% } %>
        </div>
      </main>
    </div>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
  </body>
</html>