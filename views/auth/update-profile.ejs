<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <title>Update <%= user.profile.name %> -Online Shopper</title>
  </head>
  <body>
    <% include ../partials/navbar %>
    <div class="container">
      <div class="row">
        <div
          class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 my-form"
        >
          <%# if (errors.length) { %>
     <!--     <div class="alert alert-danger alert-dismissable">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%#= errors %> 
          </div>-->
          <%# } %>
          <form role="form" method="POST" action="/api/users/register">
            <fieldset>
              <h2>
                Update Profile:
              </h2>
              <hr class="colorgraph" />
              <br />
              <img class="profile-imageholder" src ="/images/profile-imageholder.png" />
              <div class="form-group">
              <br />
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control input-lg"
                  value= "<%=user.profile.name%>"
                />
              </div>
              <div class="form-group">
              <br />
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control input-lg"
                  value = "<%=user.email%>"
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  name="address"
                  id="address"
                  class="form-control input-lg"
                  value="<%=user.address%>"
                />
              </div>
              <hr class="colorgraph" />
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <input
                    type="submit"
                    class="btn btn-lg btn-primary btn-block"
                    value="Update"
                  />
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
    <% include ../partials/footer %> <% include ../partials/scripts %>
  </body>
</html>